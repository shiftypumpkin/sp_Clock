<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             x:Class="DClock.MainPage" Shell.NavBarIsVisible="False" Shell.TabBarIsVisible="False"
             NavigationPage.HasNavigationBar="False" NavigationPage.HasBackButton="False" BackgroundColor="Black" >

	<ScrollView BackgroundColor="Black" Margin="-90,30,0,0">
        <VerticalStackLayout>
			<HorizontalStackLayout>
				<Label
                x:Name="Temperature"
                Text="000°"
                FontSize="80"
                HeightRequest="100"
                Margin="120,-20,0,0"
                TextColor="{StaticResource Red}" />
				<Label
                x:Name="CurrentDate"
                Text="Day of Week ??/??/????"
                FontSize="50"
                HeightRequest="75"
                Margin="375,0,0,0"
                TextColor="{StaticResource Red}" />
			</HorizontalStackLayout>
			<Label
                x:Name="MainClock"
                Text="hey"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="200"
                HeightRequest="350"
                Margin="50,-30,0,0"
                HorizontalOptions="CenterAndExpand"
                TextColor="{StaticResource Red}" />		

		</VerticalStackLayout>
    </ScrollView>

</ContentPage>
